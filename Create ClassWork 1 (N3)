import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        /*
        შეიტანეთ სამი მთელი რიცხვი, გამოიტანეთ მათი ჯამი და ნამრავლი.
         */

        Scanner scan = new Scanner(System.in);
        int a = 0;
        int b = 0;
        int c = 0;

        a = scan.nextInt();
        b = scan.nextInt();
        c = scan.nextInt();

        int add = a + b + c;
        int mul = a * b * c;

        System.out.println("სამი მთელი რიცხვის ჯამი: " + add);
        System.out.println("სამი მთელი რიცხვის ნამრავლი: "+ mul);
    }
}
